{
  "name": "conversion-service",
  "version": "0.2.0-0",
  "description": "A webservice with a REST Api which can convert document/media files using different binaries",
  "license": "GPL-3.0-or-later",
  "author": "Sven Patrick Meier <sven.patrick.meier@team-parallax.com>",
  "main": "src/app.ts",
  "scripts": {
    "build:docker": "docker build -t teamparallax/conversion-service -f ./Dockerfile .",
    "git:commit": "yarn git-cz",
    "lint": "yarn eslint src --ext .ts",
    "lint:fix": "yarn eslint src --ext .ts --fix",
    "release": "standard-version",
    "start": "ts-node src/app.ts",
    "start:dev": "yarn tsoa:create:local && yarn start",
    "start:local:dev": "ts-node src/app.dev.ts",
    "start:docker": "docker run --name web-conversion-service -p 3000:3000 teamparallax/conversion-service",
    "start:docker:dev": "yarn run build:docker && yarn run start:docker",
    "test": "yarn jest --config ./jest.config.js --detectOpenHandles",
    "test:integration": "yarn jest integration --config ./jest.config.js --detectOpenHandles",
    "test:unit": "yarn jest unit --config ./jest.config.js --detectOpenHandles",
    "test:unit:coverage": "yarn test:unit --coverage --reporters=default --reporters=jest-junit",
    "test:integration:coverage": "yarn test:integration --coverage --reporters=default --reporters=jest-junit",
    "test:all": "yarn test:unit && yarn test:integration",
    "test:all:ci": "yarn test:unit:coverage --ci --runInBand && yarn test:integration:coverage --ci --runInBand",
    "test:coverage": "yarn test --coverage --reporters=default --reporters=jest-junit",
    "test:types": "yarn tsc --noEmit",
    "tsoa:create:host": "tsoa spec --host $HOST && tsoa routes",
    "tsoa:create:local": "tsoa spec --host 'localhost:3000' && tsoa routes"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "fluent-ffmpeg": "^2.1.2",
    "gm": "^1.23.1",
    "mime": "^2.4.6",
    "multer": "^1.4.2",
    "tsoa": "^3.2.1",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/faker": "^5.5.3",
    "@types/fluent-ffmpeg": "^2.1.16",
    "@types/gm": "^1.18.9",
    "@types/mime": "^2.0.3",
    "@types/multer": "^1.4.4",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "commitizen": "^4.2.3",
    "concurrently": "^5.2.0",
    "faker": "^5.5.3",
    "source-map-support": "^0.5.16",
    "standard-version": "^9.2.0",
    "supertest": "^6.1.3",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "typescript-ioc": "^3.2.2"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}